<%= form_with model: post, local: true do |f| %>
  <%# <%= render "shared/errors", obj: post %> %>
  <div class="form-group">
    <%= f.label :new_image %>
    <%= f.file_field :new_image, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :caption %>
    <%= f.text_area :caption, class: "form-control", row: "7" %>
  </div>
  <p>
    <%= f.submit t(".post"), class: "btn btn-block btn-primary" %>
  </p>
  <p>
    <%= link_to t(".back"), :back, class: "btn btn-block btn-secondary" %>
  </p>
<% end %>
