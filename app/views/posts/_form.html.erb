<%= render "shared/errors", obj: post %>
<%= form_with model: post, local: true do |f| %>
  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :caption %>
    <%= f.text_area :caption, class: "form-control", row: "7" %>
  </div>
  <p>
    <%#= f.submit t("投稿する"), class: "btn btn-block btn-primary" %>
    <%= f.submit t(".post"), class: "btn btn-block btn-primary" %>
  </p>
  <p>
    <%#= link_to t("戻る"), :back, class: "btn btn-block btn-secondary" %>
    <%= link_to t(".back"), :back, class: "btn btn-block btn-secondary" %>
  </p>
<% end %>
